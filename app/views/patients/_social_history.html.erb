<span class="span6">
	<h4 class="alert alert-info">
		Social History:&nbsp
		<%= link_to 'Add Record', new_social_history_path(patient_id: @patient.id), 
		class: "btn btn-small btn-primary" %>	
		</h4>
		<% if @social_history.blank? %>
		<p>No social history information found on record</p>
		<% else%>
		<dl class="dl-horizontal">
			<dt>Smoking:</dt>
			<dd>
				<%= @social_history.smoking %>
				<%#= link_to 'Edit', edit_social_history_path(social_history.id), :class => 'btn btn-mini btn-info' %>
			</dd>
		</dl>
		<% end %>
	</span>	
