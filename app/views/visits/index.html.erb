<%- model_class = Visit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:patient_id) %></th>
      <th><%= model_class.human_attribute_name(:visit_date) %></th>
      <th><%= model_class.human_attribute_name(:visit_reason) %></th>
      <th><%= model_class.human_attribute_name(:visit_note) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= link_to visit.patient.full_name.titleize, patient_path(visit.patient) %></td>
        <td><%= visit.visit_date %></td>
        <td><%= visit.visit_reason.titleize %></td>
        <td><%= visit.visit_note %></td>
        <td><%=l visit.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_visit_path(visit), :class => 'btn btn-mini btn-info' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>