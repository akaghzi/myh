<%- model_class = Surgery -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:patient_id) %>:</strong></dt>
  <dd><%= @surgery.patient.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surgery_type) %>:</strong></dt>
  <dd><%= @surgery.surgery_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surgery_date) %>:</strong></dt>
  <dd><%= @surgery.surgery_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patient_path(id: @surgery.patient_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_surgery_path(@surgery), :class => 'btn btn-info' %>
  <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              surgery_path(@surgery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %> -->
</div>
