<h1>Log In</h1>
<div class="control-group">
	<div class="controls">
		<%= form_tag sessions_path do%>
			<%= label_tag :username %>
			<span class="lowercase"><%= email_field_tag :username %></span>
			<%= label_tag :password %>
			<%= password_field_tag :password %><br />
			<%= submit_tag "Login", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>