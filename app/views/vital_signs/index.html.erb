<h1>Listing vital_signs</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Visit</th>
      <th>Temperature</th>
      <th>Heart rate</th>
      <th>Bp systolic</th>
      <th>Bp diastolic</th>
      <th>Respiratory rate</th>
      <th>Weight</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vital_signs.each do |vital_sign| %>
    <tr>
      <td><%= vital_sign.patient_id %></td>
      <td><%= vital_sign.visit_id %></td>
      <td><%= vital_sign.temperature %></td>
      <td><%= vital_sign.heart_rate %></td>
      <td><%= vital_sign.bp_systolic %></td>
      <td><%= vital_sign.bp_diastolic %></td>
      <td><%= vital_sign.respiratory_rate %></td>
      <td><%= vital_sign.weight %></td>
      <td><%= link_to 'Show', vital_sign %></td>
      <td><%= link_to 'Edit', edit_vital_sign_path(vital_sign) %></td>
      <td><%= link_to 'Destroy', vital_sign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Vital sign', new_vital_sign_path %>
