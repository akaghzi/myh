<%- model_class = ContactInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:patient_id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:alternate_phone) %></th>
      <th><%= model_class.human_attribute_name(:address_line1) %></th>
      <th><%= model_class.human_attribute_name(:address_line2) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:province) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:postal_code) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_name) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_relationship) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_phone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contact_infos.each do |contact_info| %>
      <tr>
        <td><%= link_to contact_info.id, contact_info_path(contact_info) %></td>
        <td><%= contact_info.patient_id %></td>
        <td><%= contact_info.email %></td>
        <td><%= contact_info.alternate_phone %></td>
        <td><%= contact_info.address_line1 %></td>
        <td><%= contact_info.address_line2 %></td>
        <td><%= contact_info.city %></td>
        <td><%= contact_info.province %></td>
        <td><%= contact_info.country %></td>
        <td><%= contact_info.postal_code %></td>
        <td><%= contact_info.emergency_contact_name %></td>
        <td><%= contact_info.emergency_contact_relationship %></td>
        <td><%= contact_info.emergency_contact_phone %></td>
        <td><%=l contact_info.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contact_info_path(contact_info), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      contact_info_path(contact_info),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contact_info_path,
            :class => 'btn btn-primary' %>
