<%- model_class = MedicalHistory -%>
<div class="page-header">
	<h4>
		<span class="titlehighlight">
			<%= @medical_history.patient.full_name.titleize %>
		</span>
		<span class="bluehighlight">
			<%= @medical_history.patient.gender.titleize %>
		</span>
		<span class="titlehighlight">
			<%= @medical_history.patient.age %>
		</span>
		<span class="bluehighlight">
			DOB:<%= @medical_history.patient.date_of_birth %>
		</span>
	</h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:disease) %>:</strong></dt>
  <dd><%= @medical_history.disease %></dd>
  <dt><strong><%= model_class.human_attribute_name(:self_or_family) %>:</strong></dt>
  <dd><%= @medical_history.self_or_family %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diagnosed_at) %>:</strong></dt>
  <dd><%= @medical_history.diagnosed_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cured_at) %>:</strong></dt>
  <dd><%= @medical_history.cured_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patient_path(id: @medical_history.patient_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medical_history_path(@medical_history), :class => 'btn btn-info' %>
  <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medical_history_path(@medical_history),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %> -->
</div>
