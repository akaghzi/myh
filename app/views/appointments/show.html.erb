<%- model_class = Appointment -%>
<div class="page-header">
  <h4><%=t '.title', :default => model_class.model_name.human.pluralize %></h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:patient_id) %>:</strong></dt>
  <dd><%= @appointment.patient.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:appointment_date) %>:</strong></dt>
  <dd><%= @appointment.appointment_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:appointment_slot) %>:</strong></dt>
  <dd><%= @appointment.appointment_slot.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:appointment_type) %>:</strong></dt>
  <dd><%= @appointment.appointment_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:appointment_reason) %>:</strong></dt>
  <dd><%= @appointment.appointment_reason %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              appointments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_appointment_path(@appointment), :class => 'btn' %>
  <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              appointment_path(@appointment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %> -->
</div>
