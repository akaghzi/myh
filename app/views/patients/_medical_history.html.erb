<span class="span6">
	<h4 class="alert alert-info">
		Past Medical History:&nbsp
		<%= link_to 'Add Record', new_medical_history_path(patient_id: @patient.id, relationship_id: 1), class: "btn btn-small btn-primary" %>	
	</h4>
	<% if @medical_histories.blank? %>
	<p>No past medical history information found on record</p>
	<% else %>		
	<table class="table table-condensed">
		<tr>
			<th>Disease/Problem</th>
			<th>Diagnosis Date</th>
			<td></td>
		</tr>		
		<% @medical_histories.each do | medical_history |%>
		<tr>
			<td>
				<%= medical_history.disease.name %>
			</td>
			<td><%= medical_history.diagnosed_at %></td>
			<td><%= link_to 'Edit', edit_medical_history_path(medical_history.id), :class => 'btn btn-mini btn-info' %></td>
		</tr>
		<% end %>
	</table>
	<% end %>
</span>	