<%- model_class = PregnancyHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:patient_id) %></th>
      <th><%= model_class.human_attribute_name(:full_term_births) %></th>
      <th><%= model_class.human_attribute_name(:preterm_births) %></th>
      <th><%= model_class.human_attribute_name(:spont_miscarriages) %></th>
      <th><%= model_class.human_attribute_name(:elective_abortions) %></th>
      <th><%= model_class.human_attribute_name(:living_children) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pregnancy_histories.each do |pregnancy_history| %>
      <tr>
        <td><%= link_to pregnancy_history.id, pregnancy_history_path(pregnancy_history) %></td>
        <td><%= pregnancy_history.patient_id %></td>
        <td><%= pregnancy_history.full_term_births %></td>
        <td><%= pregnancy_history.preterm_births %></td>
        <td><%= pregnancy_history.spont_miscarriages %></td>
        <td><%= pregnancy_history.elective_abortions %></td>
        <td><%= pregnancy_history.living_children %></td>
        <td><%=l pregnancy_history.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pregnancy_history_path(pregnancy_history), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pregnancy_history_path(pregnancy_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pregnancy_history_path,
            :class => 'btn btn-primary' %>
