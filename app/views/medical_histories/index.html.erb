<%- model_class = MedicalHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:patient_id) %></th>
      <th><%= model_class.human_attribute_name(:disease_is) %></th>
      <th><%= model_class.human_attribute_name(:diagnosed_at) %></th>
      <th><%= model_class.human_attribute_name(:cured_at) %></th>
      <th><%= model_class.human_attribute_name(:relationship_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @medical_histories.each do |medical_history| %>
      <tr>
        <td><%= link_to medical_history.id, medical_history_path(medical_history) %></td>
        <td><%= medical_history.patient_id %></td>
        <td><%= medical_history.disease_id %></td>
        <td><%= medical_history.diagnosed_at %></td>
        <td><%= medical_history.cured_at %></td>
        <td><%= medical_history.relationship_id %></td>
        <td><%=l medical_history.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_medical_history_path(medical_history), :class => 'btn btn-mini' %>
          <!-- <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      medical_history_path(medical_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_medical_history_path,
            :class => 'btn btn-primary' %>
