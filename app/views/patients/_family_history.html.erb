<span class="span6">
	<h4 class="alert alert-info">
		Family History:&nbsp
		<%= link_to 'Add Record', new_medical_history_path(patient_id: @patient.id), 
		class: "btn btn-small btn-primary" %>	
		</h4>
		<% if @family_histories.blank? %>
		<p>No family history information found on record</p>
		<% end%>		
		<% @family_histories.each do | family_history |%>
		<dl class="dl-horizontal">
			<dt>Disease/Problem:</dt>
			<dd>
				<%= family_history.disease %>
				<%= link_to 'Edit', edit_medical_history_path(family_history.id), :class => 'btn btn-mini btn-info' %>
			</dd>
			<dt>Relationship:</dt>
			<dd><%= family_history.self_or_family %></dd>
			<dt>Diagnosis Date:</dt>
			<dd><%= family_history.diagnosed_at %></dd>
		</dl>
		<% end %>
	</span>	
