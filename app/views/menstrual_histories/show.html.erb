<%- model_class = MenstrualHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:patient_id) %>:</strong></dt>
  <dd><%= @menstrual_history.patient_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:onset_age) %>:</strong></dt>
  <dd><%= @menstrual_history.onset_age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:normal_first_day_of_last_period) %>:</strong></dt>
  <dd><%= @menstrual_history.normal_first_day_of_last_period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:period_interval) %>:</strong></dt>
  <dd><%= @menstrual_history.period_interval %></dd>
  <dt><strong><%= model_class.human_attribute_name(:problems_with_period) %>:</strong></dt>
  <dd><%= @menstrual_history.problems_with_period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:past_problems_with_period) %>:</strong></dt>
  <dd><%= @menstrual_history.past_problems_with_period %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              menstrual_histories_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_menstrual_history_path(@menstrual_history), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              menstrual_history_path(@menstrual_history),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
