<%= form_for @gynecology_history, :html => { :class => 'form-horizontal' } do |f| %>
<% if @gynecology_history.errors.any? %>
<div class="alert">
	<h4><%= pluralize(@gynecology_history.errors.count, "error") %> prohibited this gynecology_history from being saved:</h4>
	<ul>
		<% @gynecology_history.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>
  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :patient_id, :class => 'hidden_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gynecology_problem_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:gynecology_problem_id, GynecologyProblem.all, :id, :name) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :problem_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :problem_date, :class => 'datepicker', data: {date_format: "yyyy-mm-dd"} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :followup, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :followup, rows: 4, :class => 'input-xxlarge' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                patient_path(id: @gynecology_history.patient_id), :class => 'btn' %>
  </div>
<% end %>
