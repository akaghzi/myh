<%- model_class = LabTest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:full_name) %></th>
      <th><%= model_class.human_attribute_name(:short_name) %></th>
      <th><%= model_class.human_attribute_name(:unit_of_measure) %></th>
      <th><%= model_class.human_attribute_name(:low_threshold) %></th>
      <th><%= model_class.human_attribute_name(:high_threshold) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lab_tests.each do |lab_test| %>
      <tr>
        <td><%= link_to lab_test.id, lab_test_path(lab_test) %></td>
        <td><%= lab_test.full_name %></td>
        <td><%= lab_test.short_name %></td>
        <td><%= lab_test.unit_of_measure %></td>
        <td><%= lab_test.low_threshold %></td>
        <td><%= lab_test.high_threshold %></td>
        <td><%=l lab_test.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lab_test_path(lab_test), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lab_test_path(lab_test),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_test_path,
            :class => 'btn btn-primary' %>
