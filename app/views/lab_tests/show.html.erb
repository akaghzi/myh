<%- model_class = LabTest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
  <dd><%= @lab_test.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_name) %>:</strong></dt>
  <dd><%= @lab_test.short_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_of_measure) %>:</strong></dt>
  <dd><%= @lab_test.unit_of_measure %></dd>
  <dt><strong><%= model_class.human_attribute_name(:low_threshold) %>:</strong></dt>
  <dd><%= @lab_test.low_threshold %></dd>
  <dt><strong><%= model_class.human_attribute_name(:high_threshold) %>:</strong></dt>
  <dd><%= @lab_test.high_threshold %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lab_tests_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_test_path(@lab_test), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_test_path(@lab_test),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
