<h1>Signin</h1>
<div class="control-group">
	<div class="controls">
		<%= form_tag sessions_path do%>
			<%= label_tag :username %>
			<%= text_field_tag :username %>
			<%= label_tag :password %>
			<%= password_field_tag :password %><br />
			<%= submit_tag "Sign in", class: "btn btn-primary" %>
		<% end %>
		<!-- <p>New user? <%= link_to "Sign up now!", new_user_path %></p> -->
	</div>
</div>