<%- model_class = VitalSign -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:visit_id) %></th>
      <th><%= model_class.human_attribute_name(:temperature) %></th>
      <th><%= model_class.human_attribute_name(:heart_rate) %></th>
      <th><%= model_class.human_attribute_name(:bp_systolic) %></th>
      <th><%= model_class.human_attribute_name(:bp_diastolic) %></th>
      <th><%= model_class.human_attribute_name(:respiratory_rate) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vital_signs.each do |vital_sign| %>
      <tr>
        <td><%= link_to vital_sign.id, vital_sign_path(vital_sign) %></td>
        <td><%= vital_sign.visit_id %></td>
        <td><%= vital_sign.temperature %></td>
        <td><%= vital_sign.heart_rate %></td>
        <td><%= vital_sign.bp_systolic %></td>
        <td><%= vital_sign.bp_diastolic %></td>
        <td><%= vital_sign.respiratory_rate %></td>
        <td><%= vital_sign.weight %></td>
        <td><%=l vital_sign.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vital_sign_path(vital_sign), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vital_sign_path(vital_sign),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vital_sign_path,
            :class => 'btn btn-primary' %>
