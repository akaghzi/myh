<span class="span6">
	<h4 class="alert alert-error">
		Allergies:&nbsp
		<%= link_to 'Add Allergy', new_allergy_path(patient_id: @patient.id), class: "btn btn-small btn-primary" %>
	</h4>
	<% if @patient.allergies.blank? %>
	<p>No allergy information found on record</p>
	<% else %>
	<table class="table table-condensed">
		<tr>
			<th>Substance Name</th>
			<th>Substance Type</th>
			<th>Reaction Type</th>
		</tr>
		<% @patient.allergies.each do | allergy |%>
		<tr>
			<td><%= allergy.substance_name %></td>
			<td><%= allergy.substance_type %></td>
			<td><%= allergy.reaction %></td>
			<td><%= link_to 'Edit', edit_allergy_path(allergy.id), :class => 'btn btn-mini btn-info' %></td>		
		</tr>
		<% end %>
	</table>
	<% end %>
</span>
