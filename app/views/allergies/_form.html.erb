<%= form_for @allergy, :html => { :class => 'form-horizontal' } do |f| %>
<% if @allergy.errors.any? %>
<div class="alert">
	<h4><%= pluralize(@allergy.errors.count, "error") %> prohibited this allergy from being saved:</h4>
	<ul>
		<% @allergy.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

  <div class="control-group">
    <%#= f.label :patient_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.hidden_field :patient_id, :class => 'hidden_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :substance_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :substance_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :substance_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :substance_type, VALID_SUBSTANCETYPE, :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reaction, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reaction, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                patient_path(id: @allergy.patient.id), :class => 'btn' %>
  </div>
<% end %>
