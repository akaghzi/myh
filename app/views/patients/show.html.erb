<%- model_class = Patient -%>
<div class="page-header">
  <h1>
		<span class="titlehighlight">
			<%= @patient.full_name.titleize %>
		</span>
		<span class="sexhighlight">
		<%= @patient.sex.titleize %>
	</span>
		<span class="titlehighlight">
			<%= @patient.age %>
		</span>
	</h1>
	<h2>
		Date of Birth: <%= @patient.date_of_birth.to_s+ ' Phone: '+  @patient.phone %>
	</h2> 
</div>

<h3>Visit Information:</h3>

