<%- model_class = Immunization -%>
<div class="page-header">
	<h4>
		<span class="titlehighlight">
			<%= @immunization.patient.full_name.titleize %>
		</span>
		<span class="bluehighlight">
			<%= @immunization.patient.gender.titleize %>
		</span>
		<span class="titlehighlight">
			<%= @immunization.patient.age %>
		</span>
		<span class="bluehighlight">
			DOB:<%= @immunization.patient.date_of_birth %>
		</span>
	</h4>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:vaccine_id) %>:</strong></dt>
  <dd><%= @immunization.vaccine.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:immunization_year) %>:</strong></dt>
  <dd><%= @immunization.immunization_year %></dd>
  </dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patient_path(id: @immunization.patient.id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_immunization_path(@immunization), :class => 'btn btn-info' %>
<!--  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              immunization_path(@immunization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %> -->
</div>
