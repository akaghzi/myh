<%= form_for @allergy, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :patient_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :patient_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :substance_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :substance_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :substance_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :substance_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reaction, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reaction, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                allergies_path, :class => 'btn' %>
  </div>
<% end %>
