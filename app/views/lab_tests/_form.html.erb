<%= form_for @lab_test, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :full_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :full_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_of_measure, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :unit_of_measure, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :low_threshold, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :low_threshold, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :high_threshold, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :high_threshold, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_tests_path, :class => 'btn' %>
  </div>
<% end %>
